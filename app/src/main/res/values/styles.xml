    <!--Button Style-->
    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/text.title</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:background">@drawable/selector_button_positive</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>


    <style name="Button.Positive" parent="BaseButtonStyle" />

    <style name="Button.Positive.Rounded" parent="Button.Positive">
        <item name="android:background">@drawable/selector_button_positive_rounded</item>
    </style>

    <style name="Button.Negative" parent="BaseButtonStyle">
        <item name="android:textColor">@drawable/color_button_negative_text</item>
        <item name="android:background">@drawable/selector_button_negative</item>
    </style>

    <style name="Button.Negative.Rounded" parent="Button.Negative">
        <item name="android:background">@drawable/selector_button_negative_rounded</item>
    </style>



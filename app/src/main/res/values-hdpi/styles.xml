<resources>

    <style name="num_keyboard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:background">@drawable/keyboard_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="input_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:hint">输入房号或券号</item>
    </style>
  <style name="bfInfo_txt">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/buyinfo</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="hotelname_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
 <style name="temp_datetxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/write1</item>
    </style>

    <style name="temp_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/write1</item>
      <!--  <item name="android:layout_below">@id/date</item>-->
    </style>

    <style name="temp_txt1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/write1</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="temp_txt2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/temp_title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>
      <style name="temp_txt3">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 消费早餐详情字体 -->
    <style name="buy_bf_top_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/write1</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">3dp</item>
    </style>
      <!-- 消费早餐详情列表字体 -->
    <style name="buy_pop_txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/write2</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 本次消费\购买份数： -->
    <style name="buy_txt1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#4c4c4c</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <!-- 加减按钮 -->
    <style name="sum_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/bf_title</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_sum_selector</item>
    </style>
    <!-- 本次消费\购买份数： -->
    <style name="buy_txt2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/bf_title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">3</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--所需积分及金额： -->
    <style name="buy_txt3">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/write1</item>
    </style>
      <!-- 支付早餐样式 -->
    <style name="pay_bf_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/write1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_pay_bf_selector</item>
    </style>
    <style name="buy_handle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/popbg</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>